---
interface Props {
  title: string;
  description: string;
  classes?: string;
}

const { title, description, classes = '' } = Astro.props as Props;
---

<section class={`py-10  ${classes}`}>
  <h1 class='text-4xl text-slate-200 text-center'>{title}</h1>
  <p class='text-[18px] md:text-[20px] px-5 text-slate-300'>{description}</p>

  <slot />
</section>
